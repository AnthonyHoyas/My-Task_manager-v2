<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
</head>
<body>
  <div class="principal">
    <div class="wrap">
      <form class="formulario" action="">
        <input type="text" id="tareaInput" placeholder="Write here the task you would like to add">
        <input type="button" class="boton" id="btn-agregar" value="Add a New task and upload a picture">
        <button id="upload_widget" class="cloudinary-button">Upload files</button>

      </form>
    </div>
  </div>

  <div class="tareas">
    <div class="wrap">
      <ul class="lista" id="lista">
        <li><a href="#">1 Lorem ipsum dolor sit amet.</a></li>
        <li><a href="#">2 Lorem ipsum dolor sit amet.</a></li>
        <li><a href="#">3 Lorem ipsum dolor sit amet.</a></li>
      </ul>
      <img  
      id="uploadedimage" 
      src="">
    </img> 
    </div>
  <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>  
  <script type="text/javascript" >

const myWidget = cloudinary.createUploadWidget(
    {
      cloudName: "ds8yd9u2q",
      uploadPreset: "e8st264k",

    },
    (error, result) => {
      if (!error && result && result.event === "success") {
        console.log("Done! Here is the image info: ", result.info);
        document
          .getElementById("uploadedimage")
          .setAttribute("src", result.info.secure_url);
      }
    }
  );
  
  document.getElementById("upload_widget").addEventListener(
    "click",
    function () {
      myWidget.open();
    },
    false
  );

  </script>
  <script src="static/scripts/tasks.js"></script>
</body>
</html>
